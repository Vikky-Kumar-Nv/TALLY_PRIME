{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "npm install --force && npm run build",
  "installCommand": "npm install --force --legacy-peer-deps --ignore-platform",
  "framework": "vite",
  "outputDirectory": "dist",
  "functions": {
    "app/**": {
      "includeFiles": "dist/**"
    }
  }
}